        <Constraint
            android:id="@+id/menu1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="50dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/menu2"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/gdOnboard1">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="80dp"
            motion:layout_constraintBottom_toBottomOf="@+id/menu3"
            motion:layout_constraintEnd_toStartOf="@+id/gdOnboard2"
            motion:layout_constraintStart_toEndOf="@+id/menu3"
            motion:layout_constraintTop_toTopOf="@+id/menu3"
            motion:layout_constraintVertical_bias="0.0">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/menu3"
        motion:constraintSetStart="@+id/menu2"

        motion:duration="3000"
        motion:transitionFlags="disableIntraAutoTransition">
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
    <ConstraintSet
        android:id="@+id/menu4"
        motion:deriveConstraintsFrom="@+id/menu3">
        <Constraint
            android:id="@+id/logoMenu4"
            android:layout_width="0dp"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3"
