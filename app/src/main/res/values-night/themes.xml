<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BCAMobiIe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/cornerDialogFlaz</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_edittext_selector</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NoShiftBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">1.0</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cornerDialogFlaz">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>