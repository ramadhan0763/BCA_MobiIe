<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bgwrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bgalertwrong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/robotoregular"
        android:text="@string/incorret_code_acces"
        android:textColor="@color/blue_text_color"
        app:layout_constraintEnd_toEndOf="@+id/bgwrong"
        app:layout_constraintStart_toStartOf="@+id/bgwrong"
        app:layout_constraintTop_toTopOf="@id/bgwrong" />

    <ImageButton
        android:id="@+id/btnOkInccoreCode"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/clickbtnbackalertwrongselector"
        app:layout_constraintBottom_toBottomOf="@+id/bgwrong"
        app:layout_constraintEnd_toEndOf="@+id/bgwrong"
        app:layout_constraintStart_toStartOf="@+id/bgwrong" />


</androidx.constraintlayout.widget.ConstraintLayout>